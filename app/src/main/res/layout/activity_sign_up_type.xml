<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SignUpTypeActivity"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="back"


            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"

                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:padding="2dp"
                android:src="@drawable/left_arrow_key" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="Back" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Signup as"
            android:textSize="15dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="100dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:text="Doctor"
            android:layout_margin="10dp"
            android:gravity="center"
            android:onClick="doctorSignup"
            android:background="@drawable/stroke_white"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:text="Patient"
            android:onClick="openPatientSignUP"
            android:layout_margin="10dp"

            android:gravity="center"
            android:background="@drawable/stroke_white"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_unselected"
        android:layout_margin="5dp"

        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinner"
            android:padding="10dp"

            android:layout_width="fill_parent"
            android:layout_height="50dp"
            />
    </LinearLayout>
    </ScrollView>

</LinearLayout>