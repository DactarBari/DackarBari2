<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AddScheduleDrActivityBigMenu"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/app_bar_height"
                android:src="@drawable/left_white"
                android:layout_marginLeft="15dp"
                android:padding="17dp"
                android:onClick="back"
                android:layout_height="@dimen/app_bar_height"
                />
            <TextView
                android:layout_width="match_parent"
                android:text="Schedule Type"
                android:textSize="15dp"


                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="140dp"
                android:layout_height="match_parent"
                />
        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_height"
            android:onClick="addDailySchedule"
            android:background="@drawable/bg_selected">

            <RelativeLayout
                android:layout_width="@dimen/menu_height"
                android:layout_marginLeft="10dp"

                android:layout_height="@dimen/menu_height">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="12dp"
                    android:src="@drawable/calender_365" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Daily"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Setup your schedule in daily pattern"
                    android:fontFamily="@font/montserrat_regular"

                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_height"
            android:onClick="addWeeklySchedule"
            android:background="@drawable/bg_selected">

            <RelativeLayout
                android:layout_width="@dimen/menu_height"
                android:layout_marginLeft="10dp"

                android:layout_height="@dimen/menu_height">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="12dp"
                    android:src="@drawable/seven_day" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Weekly"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Setup your schedule in weekly pattern"
                    android:fontFamily="@font/montserrat_regular"

                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_height"
            android:onClick="addMonthlySchedule"
            android:background="@drawable/bg_selected">

            <RelativeLayout
                android:layout_width="@dimen/menu_height"
                android:layout_marginLeft="10dp"

                android:layout_height="@dimen/menu_height">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="12dp"
                    android:src="@drawable/monthly_12" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Monthly"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Setup your schedule in monthly pattern"
                    android:fontFamily="@font/montserrat_regular"

                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>